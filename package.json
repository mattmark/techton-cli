{
  "name": "techton-cli",
  "version": "0.0.1",
  "description": "CLI tool for Techton",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattmark/techton-cli"
  },
  "author": "mattmark <matt.vandusen@float-left.co>",
  "license": "MIT",
  "private": true,
  "bin": {
    "techton": "bin/techton.js"
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "tslint -t codeFrame 'commands/**/*.ts' 'actions/**/*.ts' 'lib/**/*.ts' 'test/**/*.ts' ",
    "docs:deploy": "ts-node tools/publish",
    "test": "ts-node node_modules/tape/bin/tape test/**/*.test.ts | tap-spec",
    "test:report": "nyc --reporter=lcov yarn test; nyc report ---reporter=text",
    "test:watch": "",
    "test:coverage": "cat ./coverage/lcov.info | coveralls",
    "precommit": "lint-staged",
    "release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release",
    "prepush": "yarn test",
    "commitmsg": "validate-commit-msg"
  },
  "prettier": {
    "semi": false,
    "singleQoute": true
  },
  "lint-staged": {
    "{commands,actions,lib,bin,test,tools}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"yarn commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "devDependencies": {
    "@types/inquirer": "^0.0.42",
    "@types/node": "^10.5.2",
    "@types/node-emoji": "^1.8.0",
    "@types/ora": "^1.3.4",
    "@types/os-name": "^2.0.0",
    "@types/tape": "^4.2.32",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.7",
    "shelljs": "^0.8.2",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-config-standard": "^7.1.0",
    "typescript": "^2.9.2",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.16.0",
    "inquirer": "^6.0.0",
    "node-emoji": "^1.8.1",
    "ora": "^2.1.0",
    "os-name": "^2.0.1",
    "ts-node": "^7.0.0"
  }
}
